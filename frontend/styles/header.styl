.header
  background #60B5CC
  color $color-white
  text-align center

.nav
  @extend $wrapped
  display flex
  align-items center

  &__item
    color $color-dark-blue
    text-decoration none
    font-size $font-size-head
    padding $space-normal
    transition all .25s ease-out
    cursor pointer

    &:hover
    &--current
      color $color-white

    // logo
    &:first-child
      margin-right $space-normal
      padding $space-small $space-small $space-small $space-large
      background-image url('/svgs/elm-logo-mono.svg')
      background-repeat no-repeat
      background-size 3.6rem
      background-position 0 45%
      font-size $font-size-huge
      color $color-white
      text-decoration none

  &__item + &__item
    margin-left $space-small

.signed-in-status
  margin-left: 16rem

  img
    width: 4rem
    border-radius: 2rem
    border-radius: 2rem
    vertical-align: middle
    margin-right: $space-small

  span
    margin-right: $space-normal
    color: $color-dark-blue

  button
    text-decoration: none
    font-size: $font-size-base
    padding: $space-small
    border-radius: $space-tiny
    border: none
    background-color: $color-light-grey
    color: $color-dark-blue
