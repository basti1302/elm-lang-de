.notification
  z-index 5

  position fixed
  top 1rem
  left 50%
  transform translate(-50%, 0)

  max-width 100vw
  width 30rem
  min-height 4rem
  padding 1rem

  opacity 0.92
  box-shadow  5px 5px 20px 0px rgba(52,73,94,1)

  display flex;
  justify-content center
  align-items center
  text-align center


.notification-info
  background $color-light-green

.notification-error
  background red
  color $color-white

