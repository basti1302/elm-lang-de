mq_to($to)
  s("screen and (max-width: %s)", $to - 1)
mq_from($from)
  s("screen and (min-width: (%s + 1))", $from)
mq_from_to($from, $to)
  s("screen and (min-width: (%s + 1)) and (max-width: %s)", $from, $to - 1)
mq_from_and_print($from)
  s("screen and (min-width: (%s + 1)), print", $from)

// values are aligned with spectre.css responsive grid
$mq-xs-width = 480px
$mq-s-width = 600px
$mq-m-width = 840px
$mq-l-width = 960px
$mq-xl-width = 1280px

$mq-up_to_XS = mq_to($mq-xs-width)
$mq-up_to_S = mq_to($mq-s-width)
$mq-up_to_M = mq_to($mq-m-width)
$mq-up_to_L = mq_to($mq-l-width)
$mq-up_to_XL = mq_to($mq-xl-width)

$mq-XS_to_S = mq_from_to($mq-xs-width, $mq-s-width)
$mq-S_to_M = mq_from_to($mq-s-width, $mq-m-width)
$mq-M_to_L = mq_from_to($mq-m-width, $mq-l-width)
$mq-L_to_XL = mq_from_to($mq-l-width, $mq-xl-width)

$mq-XS_and_up = mq_from($mq-xs-width)
$mq-S_and_up = mq_from($mq-s-width)
$mq-M_and_up = mq_from($mq-m-width)
$mq-L_and_up = mq_from($mq-l-width)
$mq-XL_and_up = mq_from($mq-xl-width)

// hide an element when screen is wider than x, complementing spectres'
// hide-xy classes.
@media $mq-XS_and_up
  .hide-wd-xs
    display: none !important;
@media $mq-S_and_up
  .hide-wd-sm
    display: none !important;
@media $mq-M_and_up
  .hide-wd-md
    display: none !important;
@media $mq-L_and_up
  .hide-wd-lg
    display: none !important;
@media $mq-XL_and_up
  .hide-wd-xl
    display: none !important;
