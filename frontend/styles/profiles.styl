.profile-list

  ul
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-around
    align-content flex-start
    align-items flex-start
    list-style-type none
    padding 0
    margin 0

  li > a
    width 15rem
    height 15rem
    display flex
    flex-direction column
    justify-content center
    align-items center
    border 1px solid $color-light-grey
    border-radius .5rem
    margin .3rem
    background-color $color-very-light-grey
    &:hover
      background-color: $color-white

  img.profil-pic
    width 80px
    border-radius .5rem
    margin-bottom 1rem


.profile-details
    display flex
    flex-direction column
    justify-content center
    align-items center

  img.profil-pic
    width 200px
    border-radius 1rem
    margin-bottom 2rem

  & > div.row
    width 20rem
    margin .5rem
    position relative
    left 10rem

  & > div.row > span
    width 100%
    display inline-block
    text-align left

  & > div.row > label+span
    width calc(100% - 10rem)
    position relative
    left -10rem

  label
    display inline-block
    width 10rem
    position relative
    left -10rem
    text-align left
